<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.task.services.domain.dao.QueryTaskUserRelationDao">
                                                                                                                                                                                                                <sql id="Base_Column_List">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                task_user_relation.id, task_user_relation.user_id AS userId, task_user_relation.task_id AS taskId, task_user_relation.create_time AS createTime, task_user_relation.update_time AS updateTime
    </sql>

    
    
    <select id="queryMasterModel" resultType="TaskUserRelationModel">
       SELECT task_user_relation.*
       FROM task_user_relation
       WHERE task_user_relation.id=#{id}
       GROUP BY task_user_relation.id
    </select>



                    
    <select id="findTaskUserRelationPage" resultType="TaskUserRelationRecord" parameterType="TaskUserRelationRecord">
            SELECT <include refid="Base_Column_List"/>

        

        FROM task_user_relation

        
        
        WHERE 1=1
        

        
                                                                            <if test="record.id != null and record.id>0 ">
                                    AND task_user_relation.id LIKE CONCAT('%',#{record.id},'%')
                            </if>
                                                                    

                                                                                        <if test="record.userId != null and record.userId>0 ">
                                    AND task_user_relation.user_id LIKE CONCAT('%',#{record.userId},'%')
                            </if>
                                                                    

                                                                                        <if test="record.taskId != null and record.taskId>0 ">
                                    AND task_user_relation.task_id LIKE CONCAT('%',#{record.taskId},'%')
                            </if>
                                                                                

                                                                                        <if test="record.createTime != null and record.createTime>0 ">
                                    AND task_user_relation.create_time LIKE CONCAT('%',#{record.createTime},'%')
                            </if>
                                                                                

                                                                                        <if test="record.updateTime != null and record.updateTime>0 ">
                                    AND task_user_relation.update_time LIKE CONCAT('%',#{record.updateTime},'%')
                            </if>
        
        <if test="startTime != null">
            <![CDATA[AND task_user_relation.start_time >= DATE(#{startTime})]]>
        </if>
        <if test="endTime != null">
            <![CDATA[AND task_user_relation.end_time <= DATE(#{endTime}]]>
        </if>
            <!--
        <if test="search != null and search != ''">
            OR task_user_relation.name LIKE CONCAT('%',#{search},'%')
        </if>
        -->
                            ORDER BY update_time DESC
                                                    , create_time DESC
                        </select>
</mapper>